    <![endif]-->
    <script>
        $(document).ready(function () {
            $(".toggle-password").click(function () {
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    $(".toggle-password").removeClass("fa fa-eye-slash");
                    $(".toggle-password").addClass("fa fa-eye");
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                    //$(".toggle-password").removeClass("fa fa-eye");
                    $(".toggle-password").addClass("fa fa-eye-slash"); 
                }
            });
        });
        function Verify(){
             $('#OTPConfirm_Modal').modal('show');
        }
    </script>
</head>
<body>
    @{
        var check = ViewBag.Validation;
        var uid = ViewBag.UserId;
        if (check == "Invalid")
        {
        <p>@check</p>    
            <script  type="text/javascript">
           
            
                   $(function () {
                        
            $('#UserId').val('@uid');
           
           
                       debugger;
                     
                       $('#OTPConfirm_Modal').modal('show');
                        
                   });
                </script>
        }
    }

       <div class="float-right mr-2">

                <a href="/Self/Account/BackOfficeLogin" style=" color:white;">
                    <button class="btn btn-primary bg-primary" style=" color:white;">
                    Admin Login
           </button>

                </a>

                </div>
                <div class="account-page"> 
                        <!-- Main Wrapper -->
    <div class="main-wrapper">

        <div class="account-content">

            <div class="container">


                <!-- Account Logo -->
                <div class="account-logo">
                        @*<a href="index.html"><img src="~/assets/img/DOLogo.png" alt="JYA HRMS" style="width:462px"></a>*@
                </div>
                <!-- /Account Logo -->

                <div class="account-box">
                    <div class="account-wrapper">
                        <h3 class="account-title">Customer Login</h3>
                        <p class="account-subtitle">Justify Your Actions</p>

                        <!-- Account Form -->
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                    <div class="form-group">
                                    @Html.LabelFor(m => m.CivilId)
                                    @Html.TextBoxFor(m => m.CivilId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CivilId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col">
                                            @Html.LabelFor(m => m.Password)
                                            </div>
                                        </div>
                                        <div class="wrapper1">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            <span toggle="#Password"  class="text-primary text-20 pull-right fa fa-eye-slash font-weight-bold field-icon toggle-password"></span>
                                          </div>
                                    </div>
                                    <div class="form-group text-center">
                                        <button class="btn btn-primary account-btn" type="submit">Login</button>

                                        
                                        <a href="/Self/UserManagement/CustomerProfile" class="mt-2">Sign Up</a>
                                    </div>

                            }
                        <!-- /Account Form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->

                </div>

                <partial name="~/Areas/SelfPortal/Views/OTPModal/_ModalOTPConfirm.cshtml" />;

</body>
</html>
